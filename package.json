{
  "name": "@datasign/siop",
  "version": "0.7.1",
  "repository": "git://github.com/DataSignInc/react-native-did-siop.git",
  "description": "A cross-platform library for OIDC SIOP v2 (OpenID Connect Self-Issued Identity Provider for Decentralized Identities).",
  "main": "./dist/index.js",
  "react-native": "dist/index.js",
  "scripts": {
    "test": "jest",
    "build": "tsc",
    "watch": "tsc --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "generate-json-schema": "npx typescript-json-validator src/siop-schema.d.ts Registration",
    "ajv:compile": "ajv compile -s src/registration.json -o src/ajv-schemas/registration.js",
    "test:ci": "yarn test --coverage --coverageReporters json --coverageDirectory coverage/"
  },
  "keywords": [
    "SSI",
    "DID",
    "SIOP",
    "SIOPv2",
    "OpenIDConnect",
    "OIDC",
    "OIDC4VP",
    "reactnative",
    "react-native"
  ],
  "author": "DataSign Inc.",
  "license": "MIT",
  "dependencies": {
    "ajv": "^6.5.5",
    "buffer": "^6.0.3",
    "crypto-js": "3.3.0",
    "did-jwt": "^5.1.2",
    "did-resolver": "^3.1.0",
    "query-string": "^7.0.0"
  },
  "peerDependencies": {
    "react-native": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.17.7",
    "@babel/runtime": "^7.8.4",
    "@react-native-community/eslint-config": "^1.1.0",
    "@types/crypto-js": "^3.1.47",
    "@types/elliptic": "^6.4.14",
    "@types/jest": "^27.4.1",
    "@types/react-native": "^0.67.3",
    "ajv-cli": "3.3.0",
    "babel-jest": "^27.5.1",
    "elliptic": "^6.5.4",
    "eslint": "^8.11.0",
    "jest": "^27.5.1",
    "jest-fetch-mock": "^3.0.3",
    "metro-react-native-babel-preset": "^0.74.1",
    "prettier": "^2.2.1",
    "prettier-eslint": "^13.0.0",
    "react-native": "^0.67.3",
    "typescript": "^4.6.2",
    "web-did-resolver": "^2.0.4"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "testPathIgnorePatterns": [
      "./__tests__/consts.ts",
      "./node_modules",
      "./dist",
      ".*\\.d\\.validator\\.ts"
    ],
    "verbose": false
  }
}
